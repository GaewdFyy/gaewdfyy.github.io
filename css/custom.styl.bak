.furry-container
  display flex
  gap 20px
  margin 40px auto
  padding 24px
  max-width 1200px
  background #f0f8ff
  border-radius 24px

.furry-text
  flex 1
  padding 16px
  background rgba(255, 255, 255, 0.7)
  border-radius 12px

.furry-img
  flex 0 0 300px
  img
    width 100%
    border-radius 16px
    
#chatgpt-web-container {
  max-width: 800px;
  margin: 20px auto;
  padding: 20px;
  background: var(--background-color);
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  min-height: 400px;
  overflow-y: auto;
}